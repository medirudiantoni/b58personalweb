{{> head }}

    <section class="w-100 bg-secondary-subtle" style="height: 100vh;">
      <div class="container">
        <div class="col-md-6 offset-3 p-5">
          <h1>REGISTER</h1>

          <form id="my-form" method="post" action="/register">
              
            <div class="mb-3">
              <label for="name" class="form-label fw-">Name</label>
              <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label fw-">Email</label>
              <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label fw-">Password</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>
            
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-dark rounded-pill px-4">Submit</button>
            </div>
          </form>
          <div class="mt-3 d-flex column-gap-1">
            <p>Already registered? please </p>
            <a href="/login">Login here</a>
          </div>
        </div>
      </div>
    </section>

{{> foot }}